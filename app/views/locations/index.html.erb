<p id="notice"><%= notice %></p>

<h1>Locação</h1>

<table>
  <thead>
    <tr>
      <th>Data de Devolução</th>
      <th>Cliente</th>
      <th>ID Locação</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.devolved_date %></td>
        <td><%= location.client.name%></td>
        <td><%= location.id %></td>
        <td><%= link_to 'Ver', location %></td>
        <td><%= link_to 'Editar', edit_location_path(location) %></td>
        <td><%= link_to 'Baixa', location, method: :delete, data: { confirm: 'Confirma entrega de todas as fitas?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova locação', new_location_path %>
