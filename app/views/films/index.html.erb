<p id="notice"><%= notice %></p>

<h1>Filmes</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Categoria</th>
      <th>Fita</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @films.each do |film| %>
      <tr>
        <td><%= film.name %></td>
        <td><%= film.category %></td>
        <td><%= film.ribbon_id %></td>
        <td><%= link_to 'Ver', film %></td>
        <td><%= link_to 'Editar', edit_film_path(film) %></td>
        <td><%= link_to 'Deletar', film, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Filme', new_film_path %>
