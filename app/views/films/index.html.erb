<p id="notice"><%= notice %></p>

<h1>Filmes</h1>

<table>
  <thead>
    <tr>
      <th>Título</th>
      <th>Categoria</th>
      <th>Situação</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @films.each do |film| %>
      <tr>
        <td><%= film.title %></td>
        <td><%= film.category %></td>
        <td>
              <%= if film.available == true
                    "Disponível"
                  else "Indisponível"
                  end
              %>
        </td>
        <td><%= link_to 'Ver', film %></td>
        <td><%= link_to 'Editar', edit_film_path(film) %></td>
        <td><%= link_to 'Deletar', film, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

